<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_export_chat_discussion" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.export_chat_discussion</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='general_settings']//div[@id='invite_users']" position="before">
                <div id="navbar_colors_configuration">
                    <h2>Configuraciones del Color de la Barra de Navegaci√≥n</h2>
                    <div class='row mt16 o_settings_container'>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Color del Fondo" for="navbar_background_color"/><br/>
                                <field name="navbar_background_color" widget="color" nolabel="1"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Color del Texto" for="navbar_text_color"/><br/>
                                <field name="navbar_text_color" widget="color" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>