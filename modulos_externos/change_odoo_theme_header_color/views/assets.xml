<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" inherit_id="web.assets_backend" name="change_odoo_theme_header_color assets backend navbar theme">
        <xpath expr="script[last()]" position="after">
            <t t-set="navbar_background_color" t-value="request.env['ir.config_parameter'].sudo().get_param('change_odoo_theme_header_color.navbar_background_color')"/>
            <t t-set="navbar_text_color" t-value="request.env['ir.config_parameter'].sudo().get_param('change_odoo_theme_header_color.navbar_text_color')"/>

            <style>
                .o_main_navbar{
                    background-color: <t t-esc="navbar_background_color"/> !important;
                    color: <t t-esc="navbar_text_color"/> !important;
                }
                .o_main_navbar > ul > li > a, .o_main_navbar > ul > li > label, .o_main_navbar > .o_menu_brand{
                    color: <t t-esc="navbar_text_color"/> !important;
                }
                .o_main_navbar .show .dropdown-toggle, .o_main_navbar > ul > li > a:hover, .o_main_navbar > ul > li > label:hover, .o_main_navbar > a:hover, .o_main_navbar > a:focus, .o_main_navbar > button:hover, .o_main_navbar > button:focus{
                    background-color: <t t-esc="navbar_background_color"/> !important;
                }
                .o_home_menu_background .o_main_navbar {
                    background-color: transparent !important;
                    border-color: transparent !important;
                }
                .o_home_menu_background .o_main_navbar > ul > li > a, .o_home_menu_background .o_main_navbar > ul > li > label, .o_home_menu_background .o_main_navbar > .o_menu_brand{
                    color: white !important;
                }
                .o_home_menu_background .o_main_navbar .show .dropdown-toggle, .o_home_menu_background .o_main_navbar > ul > li > a:hover, .o_home_menu_background .o_main_navbar > ul > li > label:hover, .o_home_menu_background .o_main_navbar > a:hover, .o_home_menu_background .o_main_navbar > a:focus, .o_home_menu_background .o_main_navbar > button:hover, .o_home_menu_background .o_main_navbar > button:focus{
                    background-color: transparent !important;
                }
            </style>
        </xpath>
    </template>
</odoo>