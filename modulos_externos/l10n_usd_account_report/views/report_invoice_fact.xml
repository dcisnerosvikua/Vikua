<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_fact">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="container">
                                <div class="row">
                                    <div class="col-6">

                                        <img t-attf-src="data:image/*;base64,{{o.company_id.logo}}" style="width:auto; height:150px; padding-bottom:2px;"/>
                                    </div>
                                    <div class="col-6">
                                        <h1 style="float: right; font-size:3.1em; padding-top:10%; padding-bottom:2px;">Invoice</h1>
                                    </div>
                                </div>
                                <hr style="background-color:#1ab761;"/>

                                <div class="row">
                                    <div class="col-4">
                                        <ul class="list-inline" style="font-size:12px;">
                                            <li t-if="o.company_id.name"><h4 t-field="o.company_id.name"/></li>
                                            
                                            <li style="color:#6e6e6e;" t-if="o.company_id.street"><span t-field="o.company_id.street"/></li>
                                            
                                            <li style="color:#6e6e6e;" t-if="o.company_id.street2"><span t-field="o.company_id.street2"/><span>&amp;nbsp;&amp;nbsp;</span> <span t-field="o.company_id.zip"/> </li>
                                        </ul>

                                    </div>

                                    <div class="col-8 ">
                                        <ul class="list-inline text-center" style="font-size:16px; float: right;">
                                            <br/>
                                            <li t-if="o.invoice_date"><strong>Date:</strong><span style="margin-left:15px;" t-field="o.invoice_date"/></li>
                                            <li t-if="o.invoice_ctrl_number_cli"><strong>Invoices #: </strong> VUSA - <span t-field="o.invoice_number_cli"/></li>
                                        </ul>
                                    </div>
                                </div>

                                <div style="font-size:16px; color:#6e6e6e;">
                                    <t t-if="o.company_id.website"><span t-field="o.company_id.website"/> |</t>
                                    <t t-if="o.company_id.email"><span t-field="o.company_id.email"/> |</t>
                                    <t t-if="o.company_id.phone">+1 <span class="o_force_ltr" t-field="o.company_id.phone"/></t>
                                </div>

                                <hr class="mt-3 mb-3" style="background-color:#1ab761;"/>

                                <div class="row">

                                    <div class="col-12">
                                        <ul class="list-inline mb4" style="font-size:16px; background-color:#f2f2f2;">
                                            <li>
                                                <strong>Customer Name: </strong>
                                                <span style="margin-left:15px;" t-field="o.partner_id.name"/>
                                            </li>
                                            
                                            <li>
                                                <strong>Adress: </strong> 
                                                <!--span t-field="o.partner_id.vat"/-->
                                                 <span style="margin-left:79px;" t-if="o.partner_id.street or o.partner_id.street2"><span t-field="o.partner_id.street"/><span t-field="o.partner_id.street2"/></span>

                                            </li>
                                            
                                            <li>
                                                <strong>Contact Person: </strong> 
                                                <span style="margin-left:20px;" t-field="o.partner_id.child_ids.name"></span>
                                            </li>
                                            
                                            <li>
                                                <strong>Phone Number: </strong>
                                                <span style="margin-left:21px;" class="o_force_ltr" t-field="o.partner_id.child_ids.phone"/>/
                                                <span style="margin-left:21px;" class="o_force_ltr" t-field="o.partner_id.child_ids.mobile"/>
                                            </li>
                                        
                                        </ul>
                                    </div>
                                </div>

                                <table class="table table-borderless table-sm" style="margin-top:10px;">
                                    <thead>
                                        <tr class="text-center" style="font-size:16px;">
                                            <th>Customer ID</th>
                                            <th>CURRENCY</th>
                                            <th>PAYMENT TERMS</th>
                                            <th>DUE DATE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       <tr class="text-center" style="font-size:12px;">
                                            <th style="border:1px solid #1ab761;" t-field="o.rif"></th>
                                            
                                            <th style="border:1px solid #1ab761;" t-field="o.currency_id.name"></th>
                                            
                                            <th style="border:1px solid #1ab761;" t-if="o.invoice_payment_term_id.name or o.invoice_date_due"><span t-field="o.invoice_payment_term_id.name"></span></th>

                                            <th style="border:1px solid #1ab761;" t-if="o.invoice_payment_term_id.name or o.invoice_date_due"><span t-field="o.invoice_date_due"></span></th>
                                        </tr>
                                    </tbody>
                                </table>

                                 <table class="table table-borderless table-sm" style="margin-top:10px;">
                                    <thead>
                                        <tr class="text-center" style="font-size:16px;">
                                            <th>Qty</th>
                                            <th>Description</th>
                                            <th>Unit Price</th>
                                            <th>Line Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.invoice_line_ids" t-as="line">
                                            <tr style="font-size:12px;">
                                                <td  Width="10%" style="border:1px solid #1ab761;" t-esc="line.quantity" class="text-center" t-options='{"widget": "float", "precision": 0}'/>
                                                <!--td style="border:1px solid #1ab761;"   t-esc="line.name"/-->
                                                <td style="border:1px solid #1ab761;"   t-esc="line.product_id.name"/>
                                                <td style="border:1px solid #1ab761;"   t-esc="line.price_unit" class="text-right"/>
                                                <td style="border:1px solid #1ab761;"   t-esc="line.price_subtotal" class="text-right"/>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>

                                <table class="table table-borderless table-sm">
                                    <tbody>
                                        <tr class="text-center" style="font-size:12px;">
                                            <th Width="7%" />
                                            <th Width="37%" style="border:1px solid #1ab761;" > Subtotal</th>
                                            <th Width="8%"  style="border:1px solid #1ab761;" />
                                            <th Width="8%"  style="border:1px solid #1ab761;"  t-field="o.amount_untaxed" />
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="table table-borderless table-sm">
                                    <tbody>
                                        <tr class="text-center" style="font-size:12px;">
                                            <th Width="7%" />
                                            <th Width="37%" style="border:1px solid #1ab761;" > Sales Tax</th>
                                            
                                            <th Width="8%" style="border:1px solid #1ab761;" >
                                                <span t-esc="o.invoice_line_ids.tax_ids.amount" t-options='{"widget": "float", "precision": 0}'></span>
                                                <span>%</span>
                                            </th>
                                            <th Width="8%" style="border:1px solid #1ab761;"><span t-esc="o.amount_tax_bs" t-options='{"widget": "float", "precision": 2}'></span></th>
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="table table-borderless table-sm">
                                    <tbody>
                                        <tr class="text-center" style="font-size:12px;">
                                            <th Width="7%" ></th>
                                            <th Width="44%"></th>
                                            <th Width="8%" class="pt-3">Total</th>
                                            <th Width="8%" style="border:1px solid #1ab761;" class="pt-3 pb-3"  t-field="o.amount_total" />
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="table table-borderless" style="width:75%;">
                                    <tbody>
                                        <tr style="font-size:16px;">
                                            <th style="border:1px solid #1ab761;">
                                                <ul class="list-inline">
                                                    <li>PAYMENTS MAY BE MADE BY WIRE TRANSFER AS FOLLOWS:</li>
                                                    <br/>
                                                    <li>Beneficiary Bank: TD Bank</li>
                                                    <li>Beneficiary: Vikua USA Corp</li>
                                                    <li>Account: Checking 4315589402</li>
                                                    <li>SWIFT: NRTHUS33XXX</li>
                                                    <li>ABA/Routing: 054001725</li>
                                                </ul>
                                            </th>
                                        </tr>
                                    </tbody>
                                </table>
                                
                                <div t-attf-class="footer">
                                    <div class="text-center" style="border-top: 1px solid black;">

                                        <!--ul class="list-inline mb4"-->
                                            <t t-if="o.company_id.website"><strong>Web: </strong><span t-field="o.company_id.website"/> |</t>
                                            <t t-if="o.company_id.email"><strong>Correo: </strong><span t-field="o.company_id.email"/> |</t>
                                            <t t-if="o.company_id.phone"><strong>Telefono: </strong>+1 <span class="o_force_ltr" t-field="o.company_id.phone"/></t>
                                        <!--/ul-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>